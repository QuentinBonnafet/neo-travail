<%= form_for(@episode) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :publication_date %><br>
    <%= f.date_field :publication_date %>
  </div>

  <div class="field">
    <%= f.label :link_url %><br>
    <%= f.text_field :link_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>