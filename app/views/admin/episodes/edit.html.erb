<%# <%= render "admin/episodes/form" %>

<div class="actions">
  <%= link_to "Liste des épisodes", admin_episodes_path%>
</div>
<br>

<%= form_for :episode, url: admin_episode_path(@episode), method: :patch do |f| %>

  <div class="field">
    <%= f.label "Titre" %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <br>

  <div class="field">
    <%= f.label "Description" %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <br>

  <div class="field">
    <%= f.label "Date de publication" %><br>
    <%= f.text_field :publication_date %>
  </div>
  <br>

  <div class="field">
    <%= f.label "Lien de l'épisode" %><br>
    <%= f.text_field :link_url, class: 'form-control' %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
